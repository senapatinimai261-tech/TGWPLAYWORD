const express = require('express');
const router = express.Router();
const mongoose = require('mongoose');

// Bet Schema
const betSchema = new mongoose.Schema({
  userId: { type: mongoose.Schema.Types.ObjectId, ref: 'User', required: true },
  marketId: { type: mongoose.Schema.Types.ObjectId, ref: 'Market', required: true },
  betType: { type: String, required: true },
  numbers: { type: [String], required: true },
  amount: { type: Number, required: true, min: 10, max: 10000 },
  potentialWin: { type: Number, required: true },
  status: { 
    type: String, 
    enum: ['pending', 'won', 'lost', 'cancelled'], 
    default: 'pending' 
  },
  result: {
    isWin: Boolean,
    winAmount: Number,
    declaredAt: Date
  },
  placedAt: { type: Date, default: Date.now }
});

const Bet = mongoose.model('Bet', betSchema);

// Bet multipliers configuration
const betMultipliers = {
  SINGLE_DIGIT: 9,
  SINGLE_DIGIT_BULK: 9,
  JODI_DIGIT: 90,
  JODI_DIGIT_BULK: 90,
  SINGLE_PANNA: 150,
  DOUBLE_PANNA_BULK: 300,
  SP_MOTOR: 1000,
  DP_MOTOR: 2000,
  GROUP_JODI: 300,
  SP_DP_TP: 500,
  ODD_EVEN: 2,
  RED_BRACKET: 3,
  DIGIT_BASED_JODI: 180,
  CHOICE_PANNA: 600,
  PANEL_GROUP: 400,
  TWO_DIGIT_PANEL_CP: 250,
  TWO_DIGIT_PANEL_SR: 250,
  TRIPLE_PANA: 1200,
  HALF_SANGAM: 5000,
  FULL_SANGAM: 10000
};

// Place a bet
router.post('/place-bet', async (req, res) => {
  try {
    const { userId, marketId, betType, numbers, amount } = req.body;
    
    // Validate bet type
    if (!betMultipliers[betType]) {
      return res.status(400).json({ 
        success: false, 
        error: 'Invalid bet type' 
      });
    }
    
    // Validate numbers based on bet type
    if (!validateNumbers(numbers, betType)) {
      return res.status(400).json({ 
        success: false, 
        error: 'Invalid numbers for bet type' 
      });
    }
    
    // Validate amount
    if (amount < 10 || amount > 10000) {
      return res.status(400).json({ 
        success: false, 
        error: 'Bet amount must be between â‚¹10 and â‚¹10,000' 
      });
    }
    
    // Check user balance
    const user = await User.findById(userId);
    if (user.wallet.balance < amount) {
      return res.status(400).json({ 
        success: false, 
        error: 'Insufficient balance' 
      });
    }
    
    // Calculate potential win
    const multiplier = betMultipliers[betType];
    let potentialWin = amount * multiplier * numbers.length;
    
    // Apply bulk discount
    if (numbers.length > 1 && betType.includes('BULK')) {
      potentialWin = potentialWin * 0.9; // 10% discount
    }
    
    // Apply commission
    potentialWin = Math.round(potentialWin * 0.95); // 5% commission
    
    // Deduct amount from wallet
    user.wallet.balance -= amount;
    await user.save();
    
    // Create bet record
    const bet = new Bet({
      userId,
      marketId,
      betType,
      numbers,
      amount,
      potentialWin,
      status: 'pending'
    });
    
    await bet.save();
    
    // Create transaction record
    const transaction = new Transaction({
      userId,
      type: 'bet_placed',
      amount: -amount,
      description: `${betType} bet placed`,
      balanceAfter: user.wallet.balance
    });
    
    await transaction.save();
    
    res.json({
      success: true,
      message: 'Bet placed successfully',
      betId: bet._id,
      bet: {
        id: bet._id,
        type: betType,
        numbers,
        amount,
        potentialWin,
        placedAt: bet.placedAt
      },
      wallet: {
        balance: user.wallet.balance
      }
    });
    
  } catch (error) {
    console.error('Bet placement error:', error);
    res.status(500).json({ 
      success: false, 
      error: 'Server error' 
    });
  }
});

// Get user bets
router.get('/user-bets/:userId', async (req, res) => {
  try {
    const { userId } = req.params;
    const { status, limit = 50, page = 1 } = req.query;
    
    const query = { userId };
    if (status) query.status = status;
    
    const bets = await Bet.find(query)
      .populate('marketId', 'name')
      .sort({ placedAt: -1 })
      .limit(parseInt(limit))
      .skip((page - 1) * limit);
    
    const total = await Bet.countDocuments(query);
    
    res.json({
      success: true,
      bets,
      total,
      page: parseInt(page),
      pages: Math.ceil(total / limit)
    });
    
  } catch (error) {
    res.status(500).json({ 
      success: false, 
      error: 'Server error' 
    });
  }
});

// Get bet statistics
router.get('/bet-stats/:userId', async (req, res) => {
  try {
    const { userId } = req.params;
    
    const stats = await Bet.aggregate([
      { $match: { userId: mongoose.Types.ObjectId(userId) } },
      {
        $group: {
          _id: null,
          totalBets: { $sum: 1 },
          totalAmount: { $sum: '$amount' },
          totalWins: { $sum: { $cond: [{ $eq: ['$status', 'won'] }, 1, 0] } },
          totalWinAmount: { $sum: { $cond: [{ $eq: ['$status', 'won'] }, '$result.winAmount', 0] } },
          pendingBets: { $sum: { $cond: [{ $eq: ['$status', 'pending'] }, 1, 0] } }
        }
      }
    ]);
    
    res.json({
      success: true,
      stats: stats[0] || {
        totalBets: 0,
        totalAmount: 0,
        totalWins: 0,
        totalWinAmount: 0,
        pendingBets: 0
      }
    });
    
  } catch (error) {
    res.status(500).json({ 
      success: false, 
      error: 'Server error' 
    });
  }
});

// Validate numbers based on bet type
function validateNumbers(numbers, betType) {
  if (!Array.isArray(numbers) || numbers.length === 0) {
    return false;
  }
  
  const validators = {
    SINGLE_DIGIT: (num) => /^[0-9]$/.test(num),
    SINGLE_DIGIT_BULK: (num) => /^[0-9]$/.test(num),
    JODI_DIGIT: (num) => /^[0-9]{2}$/.test(num),
    JODI_DIGIT_BULK: (num) => /^[0-9]{2}$/.test(num),
    SINGLE_PANNA: (num) => /^[0-9]{3}$/.test(num),
    DOUBLE_PANNA_BULK: (num) => /^[0-9]{3}$/.test(num),
    // Add more validators as needed
  };
  
  const validator = validators[betType];
  if (!validator) return true; // No specific validator
  
  return numbers.every(validator);
}

module.exports = router;
const mongoose = require('mongoose');

class ResultProcessor {
  constructor() {
    this.resultPatterns = {
      // Single digit win patterns
      singleDigit: (betNumber, result) => {
        const lastDigit = result.slice(-1);
        return betNumber === lastDigit;
      },
      
      // Jodi win patterns
      jodi: (betNumber, result) => {
        const lastTwo = result.slice(-2);
        return betNumber === lastTwo;
      },
      
      // Panna win patterns
      singlePanna: (betNumber, result) => {
        return betNumber === result;
      },
      
      // Half Sangam: Open Panna + Close Digit
      halfSangam: (betNumbers, openResult, closeResult) => {
        const [openPanna, closeDigit] = betNumbers.split('-');
        return openPanna === openResult && 
               closeDigit === closeResult.slice(-1);
      },
      
      // Full Sangam: Open Panna + Close Panna
      fullSangam: (betNumbers, openResult, closeResult) => {
        const [openPanna, closePanna] = betNumbers.split('-');
        return openPanna === openResult && 
               closePanna === closeResult;
      },
      
      // Odd/Even
      oddEven: (betType, result) => {
        const lastDigit = parseInt(result.slice(-1));
        const isOdd = lastDigit % 2 !== 0;
        
        if (betType === 'ODD_EVEN') {
          return (isOdd && betType.includes('Odd')) || 
                 (!isOdd && betType.includes('Even'));
        }
        return false;
      },
      
      // Red Bracket (1,3,7,9)
      redBracket: (betNumbers, result) => {
        const lastDigit = result.slice(-1);
        return betNumbers.includes(lastDigit);
      }
    };
  }
  
  // Process market results
  async processMarketResult(marketId, openResult, closeResult) {
    try {
      // Get all pending bets for this market
      const pendingBets = await Bet.find({
        marketId,
        status: 'pending'
      }).populate('userId');
      
      for (const bet of pendingBets) {
        const isWin = this.checkBetResult(bet, openResult, closeResult);
        
        bet.status = isWin ? 'won' : 'lost';
        bet.result = {
          isWin,
          winAmount: isWin ? bet.potentialWin : 0,
          declaredAt: new Date()
        };
        
        await bet.save();
        
        // Update user wallet if win
        if (isWin) {
          await User.findByIdAndUpdate(bet.userId._id, {
            $inc: { 
              'wallet.balance': bet.potentialWin,
              'wallet.winningBalance': bet.potentialWin 
            }
          });
          
          // Record winning transaction
          await Transaction.create({
            userId: bet.userId._id,
            type: 'bet_win',
            amount: bet.potentialWin,
            description: `${bet.betType} bet won`,
            balanceAfter: bet.userId.wallet.balance + bet.potentialWin
          });
        }
      }
      
      console.log(`Processed ${pendingBets.length} bets for market ${marketId}`);
      return true;
      
    } catch (error) {
      console.error('Error processing market results:', error);
      return false;
    }
  }
  
  // Check individual bet result
  checkBetResult(bet, openResult, closeResult) {
    const { betType, numbers } = bet;
    
    switch(betType) {
      case 'SINGLE_DIGIT':
      case 'SINGLE_DIGIT_BULK':
        return numbers.some(num => 
          this.resultPatterns.singleDigit(num, closeResult)
        );
        
      case 'JODI_DIGIT':
      case 'JODI_DIGIT_BULK':
        return numbers.some(num => 
          this.resultPatterns.jodi(num, closeResult)
        );
        
      case 'SINGLE_PANNA':
        return numbers.some(num => 
          this.resultPatterns.singlePanna(num, openResult) ||
          this.resultPatterns.singlePanna(num, closeResult)
        );
        
      case 'HALF_SANGAM':
        return this.resultPatterns.halfSangam(numbers[0], openResult, closeResult);
        
      case 'FULL_SANGAM':
        return this.resultPatterns.fullSangam(numbers[0], openResult, closeResult);
        
      case 'ODD_EVEN':
        return this.resultPatterns.oddEven(numbers[0], closeResult);
        
      case 'RED_BRACKET':
        return numbers.some(num => 
          this.resultPatterns.redBracket(num, closeResult)
        );
        
      default:
        return false;
    }
  }
}

module.exports = ResultProcessor;
