                selectedList.appendChild(chip);
            });
        }
        
        function calculateWin(amount) {
            const selected = document.querySelectorAll('.quick-bet-btn.active:not([style*="â‚¹"])').length;
            const winAmount = amount * 9 * selected * 0.95; // 5% commission
            document.querySelector('.place-bet-btn-mobile').textContent = 
                `Place Bet (Win: â‚¹${Math.round(winAmount)})`;
        }
        
        // Initialize
        updateSelectedNumbers();
        calculateWin(50);
