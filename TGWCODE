// Bet Rules Configuration
export const betRules = {
  minBetAmount: 10,
  maxBetAmount: 10000,
  commission: 0.05, // 5%
  maxBetsPerMarket: 50,
  maxBetsPerUser: 100,
  allowedBetTypes: Object.keys(betTypes),
  
  // Winning calculation
  calculateWin: (amount, betType, numbersCount = 1) => {
    const type = betTypes[betType];
    if (!type) return 0;
    
    let win = amount * type.multiplier;
    
    // Adjust for bulk bets
    if (type.type.includes('bulk') && numbersCount > 1) {
      win = win * numbersCount * 0.9; // 10% discount for bulk
    }
    
    // Commission deduction
    win = win * (1 - betRules.commission);
    
    return Math.round(win);
  }
};
