    <script>
        // Configuration
        const betTypes = {
            SINGLE_DIGIT: {
                name: 'Single Digit',
                multiplier: 9,
                section: 'singleDigitSection',
                inputType: 'single'
            },
            SINGLE_DIGIT_BULK: {
                name: 'Single Digit Bulk',
                multiplier: 9,
                section: 'bulkSection',
                inputType: 'bulk'
            },
            JODI_DIGIT: {
                name: 'Jodi Digit',
                multiplier: 90,
                section: 'jodiSection',
                inputType: 'jodi'
            },
            JODI_DIGIT_BULK: {
                name: 'Jodi Digit Bulk',
                multiplier: 90,
                section: 'bulkSection',
                inputType: 'bulk'
            },
            SINGLE_PANNA: {
                name: 'Single Panna',
                multiplier: 150,
                section: 'pannaSection',
                inputType: 'panna'
            },
            DOUBLE_PANNA_BULK: {
                name: 'Double Panna Bulk',
                multiplier: 300,
                section: 'bulkSection',
                inputType: 'bulk'
            },
            SP_MOTOR: {
                name: 'SP Motor',
                multiplier: 1000,
                section: 'specialSection',
                inputType: 'special'
            },
            DP_MOTOR: {
                name: 'DP Motor',
                multiplier: 2000,
                section: 'specialSection',
                inputType: 'special'
            },
            GROUP_JODI: {
                name: 'Group Jodi',
                multiplier: 300,
                section: 'specialSection',
                inputType: 'special'
            },
            SP_DP_TP: {
                name: 'SP DP TP',
                multiplier: 500,
                section: 'specialSection',
                inputType: 'special'
            },
            ODD_EVEN: {
                name: 'Odd/Even',
                multiplier: 2,
                section: 'specialSection',
                inputType: 'special'
            },
            RED_BRACKET: {
                name: 'Red Bracket',
                multiplier: 3,
                section: 'specialSection',
                inputType: 'special'
            },
            DIGIT_BASED_JODI: {
                name: 'Digit Based Jodi',
                multiplier: 180,
                section: 'specialSection',
                inputType: 'special'
            },
            CHOICE_PANNA: {
                name: 'Choice Panna',
                multiplier: 600,
                section: 'specialSection',
                inputType: 'special'
            },
            PANEL_GROUP: {
                name: 'Panel Group',
                multiplier: 400,
                section: 'specialSection',
                inputType: 'special'
            },
            TWO_DIGIT_PANEL_CP: {
                name: 'Two Digit Panel (CP)',
                multiplier: 250,
                section: 'specialSection',
                inputType: 'special'
            },
            TWO_DIGIT_PANEL_SR: {
                name: 'Two Digit Panel (SR)',
                multiplier: 250,
                section: 'specialSection',
                inputType: 'special'
            },
            TRIPLE_PANA: {
                name: 'Triple Pana',
                multiplier: 1200,
                section: 'specialSection',
                inputType: 'special'
            },
            HALF_SANGAM: {
                name: 'Half Sangam',
                multiplier: 5000,
                section: 'sangamSection',
                inputType: 'sangam'
            },
            FULL_SANGAM: {
                name: 'Full Sangam',
                multiplier: 10000,
                section: 'sangamSection',
                inputType: 'sangam'
            }
        };

        // Global variables
        let currentBetType = 'SINGLE_DIGIT';
        let selectedNumbers = new Set();
        let betAmount = 10;

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            initializeNumberPads();
            generatePannaOptions();
            updateBetSlip();
            calculateWin();
            
            // Set up bet type buttons
            document.querySelectorAll('.bet-type-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const type = this.dataset.type;
                    switchBetType(type);
                });
            });
            
            // Set up market tabs
            document.querySelectorAll('.market-tab').forEach(tab => {
                tab.addEventListener('click', function() {
                    document.querySelectorAll('.market-tab').forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                });
            });
            
            // Set up amount buttons
            document.querySelectorAll('.amount-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.amount-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                });
            });
            
            // Set up input listeners
            document.getElementById('betAmount').addEventListener('input', calculateWin);
            document.getElementById('bulkInput').addEventListener('input', handleBulkInput);
            document.getElementById('pannaInput').addEventListener('input', handlePannaInput);
            document.getElementById('specialBetType').addEventListener('change', handleSpecialBetChange);
            document.getElementById('sangamType').addEventListener('change', handleSangamChange);
        });

        // Initialize number pads
        function initializeNumberPads() {
            // Single digit pad (0-9)
            const singlePad = document.querySelector('.number-pad.single-digit');
            singlePad.innerHTML = '';
            for (let i = 0; i < 10; i++) {
                const btn = document.createElement('button');
                btn.className = 'number-btn';
                btn.textContent = i;
                btn.dataset.value = i;
                btn.addEventListener('click', () => selectSingleDigit(i));
                singlePad.appendChild(btn);
            }
            
            // Jodi digit pad (00-99)
            const jodiPad = document.querySelector('.number-pad.double-digit');
            jodiPad.innerHTML = '';
            for (let i = 0; i < 100; i++) {
                const btn = document.createElement('button');
                btn.className = 'number-btn';
                btn.textContent = i.toString().padStart(2, '0');
                btn.dataset.value = i.toString().padStart(2, '0');
                btn.addEventListener('click', () => selectJodi(i.toString().padStart(2, '0')));
                jodiPad.appendChild(btn);
            }
        }

        // Generate panna options
        function generatePannaOptions() {
            const select = document.getElementById('pannaSelect');
            select.innerHTML = '<option value="">Select Panna</option>';
            
            // Generate 100 panna options (000-099)
            for (let i = 0; i < 100; i++) {
                const option = document.createElement('option');
                option.value = i.toString().padStart(3, '0');
                option.textContent = i.toString().padStart(3, '0');
                select.appendChild(option);
            }
            
            select.addEventListener('change', function() {
                if (this.value) {
                    selectPanna(this.value);
                }
            });
        }

        // Switch bet type
        function switchBetType(type) {
            // Update active button
            document.querySelectorAll('.bet-type-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.type === type) {
                    btn.classList.add('active');
                }
            });
            
            // Update current bet type
            currentBetType = type;
            const betTypeConfig = betTypes[type];
            
            // Update bet slip
            document.getElementById('slipBetType').textContent = betTypeConfig.name;
            document.getElementById('slipMultiplier').textContent = `1:${betTypeConfig.multiplier}`;
            
            // Hide all sections
            document.querySelectorAll('.number-selection').forEach(section => {
                section.style.display = 'none';
            });
            
            // Show selected section
            document.getElementById(betTypeConfig.section).style.display = 'block';
            
            // Clear selection for new type
            selectedNumbers.clear();
            updateSelectedDisplay();
            
            // Update win calculation
            calculateWin();
        }

        // Select single digit
        function selectSingleDigit(digit) {
            if (currentBetType === 'SINGLE_DIGIT') {
                selectedNumbers.clear();
                selectedNumbers.add(digit.toString());
            } else if (currentBetType === 'SINGLE_DIGIT_BULK') {
                if (selectedNumbers.has(digit.toString())) {
                    selectedNumbers.delete(digit.toString());
                } else {
                    selectedNumbers.add(digit.toString());
                }
            }
            updateSelectedDisplay();
        }

        // Select jodi
        function selectJodi(jodi) {
            if (currentBetType === 'JODI_DIGIT') {
                selectedNumbers.clear();
                selectedNumbers.add(jodi);
            } else if (currentBetType === 'JODI_DIGIT_BULK') {
                if (selectedNumbers.has(jodi)) {
                    selectedNumbers.delete(jodi);
                } else {
                    selectedNumbers.add(jodi);
                }
            }
            updateSelectedDisplay();
        }

        // Select panna
        function selectPanna(panna) {
            selectedNumbers.clear();
            selectedNumbers.add(panna);
            updateSelectedDisplay();
        }

        // Handle bulk input
        function handleBulkInput() {
            const input = document.getElementById('bulkInput').value;
            const numbers = input.split(',').map(n => n.trim()).filter(n => n);
            
            selectedNumbers.clear();
            numbers.forEach(n => {
                if (validateNumber(n, currentBetType)) {
                    selectedNumbers.add(n);
                }
            });
            
            updateSelectedDisplay();
        }

        // Handle panna input
        function handlePannaInput() {
            const panna = document.getElementById('pannaInput').value;
            if (panna.length === 3 && /^\d{3}$/.test(panna)) {
                selectPanna(panna);
            }
        }

        // Handle special bet change
        function handleSpecialBetChange() {
            const type = this.value;
            const input = document.getElementById('specialInput');
            
            switch(type) {
                case 'odd_even':
                    input.placeholder = "Enter 'Odd' or 'Even'";
                    break;
                case 'red_bracket':
                    input.placeholder = "e.g., 1,3,7,9";
                    break;
                case 'digit_jodi':
                    input.placeholder = "e.g., *5 for 05,15,25...";
                    break;
                case 'choice_panna':
                    input.placeholder = "e.g., 1*3 for 103,113,123...";
                    break;
                case 'panel_group':
                    input.placeholder = "Enter panel group (A-D)";
                    break;
            }
        }

        // Handle sangam change
        function handleSangamChange() {
            const type = this.value;
            const closeInput = document.getElementById('closePart');
            
            if (type === 'half') {
                closeInput.placeholder = "e.g., 5 (single digit)";
            } else {
                closeInput.placeholder = "e.g., 456 (three digits)";
            }
        }

        // Update selected numbers display
        function updateSelectedDisplay() {
            const selectedList = document.getElementById('selectedList');
            const selectedCount = document.getElementById('selectedCount');
            
            // Clear current display
            selectedList.innerHTML = '';
            
            // Add selected numbers
            selectedNumbers.forEach(number => {
                const chip = document.createElement('div');
                chip.className = 'selected-number';
                chip.innerHTML = `
                    ${number}
                    <button class="remove-number" onclick="removeNumber('${number}')">
                        Ã—
                    </button>
                `;
                selectedList.appendChild(chip);
            });
            
            // Update count
            selectedCount.textContent = selectedNumbers.size;
            
            // Update bet slip
            document.getElementById('slipNumbers').textContent = 
                selectedNumbers.size > 0 ? Array.from(selectedNumbers).join(', ') : '-';
            document.getElementById('slipCount').textContent = selectedNumbers.size;
            
            // Update bet button state
            updateBetButtonState();
            
            // Recalculate win
            calculateWin();
        }

        // Remove number from selection
        function removeNumber(number) {
            selectedNumbers.delete(number);
            updateSelectedDisplay();
        }

        // Clear all selection
        function clearSelection() {
            selectedNumbers.clear();
            document.getElementById('bulkInput').value = '';
            document.getElementById('pannaInput').value = '';
            document.getElementById('specialInput').value = '';
            document.getElementById('openPanna').value = '';
            document.getElementById('closePart').value = '';
            updateSelectedDisplay();
        }

        // Set bet amount
        function setAmount(amount) {
            betAmount = amount;
            document.getElementById('betAmount').value = amount;
            document.getElementById('displayAmount').textContent = amount;
            
            // Update active amount button
            document.querySelectorAll('.amount-btn').forEach(btn => {
                btn.classList.remove('active');
                if (parseInt(btn.textContent.replace('â‚¹', '')) === amount) {
                    btn.classList.add('active');
                }
            });
            
            calculateWin();
        }

        // Calculate potential win
        function calculateWin() {
            const amount = parseInt(document.getElementById('betAmount').value) || 10;
            const betTypeConfig = betTypes[currentBetType];
            const count = selectedNumbers.size;
            
            if (amount < 10) amount = 10;
            if (amount > 10000) amount = 10000;
            
            let winAmount = 0;
            
            if (count > 0) {
                // Base calculation
                winAmount = amount * betTypeConfig.multiplier * count;
                
                // Apply bulk discount
                if (count > 1 && currentBetType.includes('BULK')) {
                    winAmount = winAmount * 0.9; // 10% discount
                }
                
                // Apply commission
                winAmount = winAmount * 0.95; // 5% commission
                
                winAmount = Math.round(winAmount);
            }
            
            document.getElementById('potentialWin').textContent = `â‚¹${winAmount}`;
            document.getElementById('displayAmount').textContent = amount;
        }

        // Update bet button state
        function updateBetButtonState() {
            const btn = document.getElementById('placeBetBtn');
            const amount = parseInt(document.getElementById('betAmount').value) || 0;
            
            if (selectedNumbers.size > 0 && amount >= 10 && amount <= 10000) {
                btn.disabled = false;
                btn.innerHTML = '<i class="fas fa-paper-plane"></i> Place Bet';
            } else {
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-ban"></i> Select Numbers First';
            }
        }

        // Place bet
        function placeBet() {
            const amount = parseInt(document.getElementById('betAmount').value);
            const numbers = Array.from(selectedNumbers);
            const betType = betTypes[currentBetType].name;
            const multiplier = betTypes[currentBetType].multiplier;
            
            if (numbers.length === 0) {
                alert('Please select numbers first!');
                return;
            }
            
            if (amount < 10 || amount > 10000) {
                alert('Bet amount must be between â‚¹10 and â‚¹10,000');
                return;
            }
            
            // Calculate win
            let winAmount = amount * multiplier * numbers.length;
            if (numbers.length > 1 && currentBetType.includes('BULK')) {
                winAmount = winAmount * 0.9;
            }
            winAmount = Math.round(winAmount * 0.95);
            
            // Show confirmation
            const confirmed = confirm(`
                ðŸ“‹ Bet Confirmation:
                
                Market: Sridevi Day
                Type: ${betType}
                Numbers: ${numbers.join(', ')}
                Count: ${numbers.length}
                Amount: â‚¹${amount}
                Potential Win: â‚¹${winAmount}
                
                Confirm this bet?
            `);
            
            if (confirmed) {
                // Add to recent bets
                const recentBets = document.getElementById('recentBetsList');
                const betItem = document.createElement('div');
                betItem.className = 'recent-bet-item fade-in';
                betItem.innerHTML = `
                    <div>
                        <div class="recent-bet-numbers">${betType}: ${numbers.join(', ')}</div>
                        <div style="font-size: 0.8rem; color: #94a3b8;">Sridevi Day</div>
                    </div>
                    <div class="recent-bet-amount">â‚¹${amount}</div>
                `;
                
                // Add at the beginning
                recentBets.insertBefore(betItem, recentBets.firstChild);
                
                // Keep only 5 recent bets
                if (recentBets.children.length > 5) {
                    recentBets.removeChild(recentBets.lastChild);
                }
                
                // Show success message
                alert(`âœ… Bet placed successfully!\n\nYour bet has been recorded. Good luck!`);
                
                // Clear selection
                clearSelection();
                setAmount(10);
                
                // Animate bet button
                const betBtn = document.getElementById('placeBetBtn');
                betBtn.classList.add('pulse');
                setTimeout(() => betBtn.classList.remove('pulse'), 2000);
            }
        }

        // Validate number based on bet type
        function validateNumber(number, betType) {
            switch(betType) {
                case 'SINGLE_DIGIT':
                case 'SINGLE_DIGIT_BULK':
                    return /^[0-9]$/.test(number);
                case 'JODI_DIGIT':
                case 'JODI_DIGIT_BULK':
                    return /^[0-9]{2}$/.test(number);
                case 'SINGLE_PANNA':
                case 'DOUBLE_PANNA_BULK':
                    return /^[0-9]{3}$/.test(number);
                default:
                    return true;
            }
        }
    </script>
</body>
</html>
